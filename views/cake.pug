extends layout

block content
  h1= title
  - var results = [{"flavor": "vanilla", "price": 40, "shape": "round"}, {"flavor": "pineapple", "price": 30, "shape": "heart"}, {"flavor": "chocolate", "price": 50, "shape": "square"}]
    div(class = 'container-fluid')
        div(class = 'row')
            each i, index in results 
                div(class="col-sm-2",onClick=`buy(${index})`) Flavor : #{i["flavor"]} <br> Price : #{i["price"]} <br> Shape: #{i["shape"]}
                script.
                    function buy(val) {
                        alert(`You purchased item ${val}`)
                    }
   